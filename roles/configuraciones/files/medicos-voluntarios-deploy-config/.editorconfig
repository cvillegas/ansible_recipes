# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py, ini}]
indent_style = space
indent_size = 4

[*.py]
force_grid_wrap = 0
include_trailing_comma = true
known_django = django
known_drf = rest_framework
known_first_party = config
line_length = 120
multi_line_output = 3
recursive = true
sections = FUTURE, STDLIB, DJANGO, DRF, THIRDPARTY, FIRSTPARTY, LOCALFOLDER
skip = .git, migrations, venv/
skip_glob = **/migrations/*.py
use_parentheses = true

[*.{html, css, scss, json, yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[nginx.conf]
indent_style = space
indent_size = 2

[*.rst]
indent_style = space
indent_size = 3
